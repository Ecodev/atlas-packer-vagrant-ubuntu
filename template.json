{
  "variables": {
    "vagrantcloud_token": "{{env `VAGRANTCLOUD_TOKEN`}}",
    "version": "1.0.{{timestamp}}",
    "description": "This box includes chef-client 14.5.27, Ubuntu Server 18.04.1, Virtualbox Guest Additions 5.2.18 and common APT packages to speed up Chef converge"
  },
  "description": "{{user `description`}}",
  "builders": [
    {
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_additions_url": "/Applications/VirtualBox.app/Contents/MacOS/VBoxGuestAdditions.iso",
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "1a56b8771c5a865f10b44b8d3b821e8404ea2f10978675e5cdc405525de7b5eb",
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "a5b0ea5918f850124f3d72ef4b85bda82f0fcd02ec721be19c1a6952791c8ee8",
      "iso_checksum_type": "sha256",
      "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/18.04/release/ubuntu-18.04.1-server-amd64.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "output.box"
      },
      {
        "type": "vagrant-cloud",
        "only": ["virtualbox-iso"],
        "access_token": "{{user `vagrantcloud_token`}}",
        "box_tag": "Ecodev/ubuntu-server-1804",
        "version_description": "{{user `description`}}",
        "version": "{{user `version`}}"
      }
    ]
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/base.sh",
        "scripts/virtualbox.sh",
        "scripts/dep.sh",
        "scripts/chef.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "push": {
    "name": "Ecodev/ubuntu-server-1804",
    "vcs": true
  }
}
